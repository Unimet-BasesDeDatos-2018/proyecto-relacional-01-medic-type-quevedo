          <div class="row">
            <div class="col m12 input-field">
              <textarea id="indicaciones" class="materialize-textarea"></textarea>
              <label for="indicaciones">Indicaciones</label>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row card-panel">
    <div class="col m12">
      <div class="row">
        <div class="col m12">
          <h5 class="center">Cirujano</h5>
          <br>
          <input class="waves-effect waves-light btn blue darken-1"  type="button" value="Mostrar" onclick="mostrar('mostrarCirujano')">
        </div>
      </div>
      <div class="row" id="mostrarCirujano" style='display:none;'>
        <div class="col m12">
          <div class="row">
            <div class="col m6 input-field">
              <input placeholder="Paro Cardiaco" name="motivo" id="motivo" type="text" class="validate">
              <label for="motivo">Motivo de la operación</label>
            </div>
            <div class="col m6 input-field">
              <input placeholder="Corazon" name="organo" id="organo" type="text" class="validate">
              <label for="organo">Órgano</label>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row card-panel">
    <div class="col m12">
      <div class="row">
        <div class="col m12">
          <h5 class="center">Internista</h5>
          <br>
          <input class="waves-effect waves-light btn blue darken-1"  type="button" value="Mostrar" onclick="mostrar('mostrarInternista')">
        </div>
      </div>
      <div class="row" id="mostrarInternista" style='display:none;'>
        <div class="col m12">
          <div class="row">
            <div class="col m6 input-field">
              <input placeholder="Diabetico" name="condicion" id="condicion" type="text" class="validate">
              <label for="condicion">Condición del Paciente</label>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row card-panel">
    <div class="col m12">
      <div class="row">
        <div class="col m12">
          <h5 class="center">Nutricionista</h5>
          <br>
          <input class="waves-effect waves-light btn blue darken-1"  type="button" value="Mostrar" onclick="mostrar('mostrarNutricionista')">
        </div>
      </div>
      <div class="row" id="mostrarNutricionista" style='display:none;'>
        <div class="col m12">
          <div class="row">
            <div class="col m6 input-field">
              <input placeholder="Vegetales, Aceite de Oliva, Pescado a la plancha bajo en sal" name="dieta" id="dieta" type="text" class="validate">
              <label for="dieta">Dieta del Paciente</label>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>





  <div class="row card-panel">
    <div class="col m12">
      <button class="waves-effect waves-light btn blue darken-1" type="submit">Guardar</button>
    </div>
  </div>
</form>


<script type="text/javascript">
function mostrar(div){
document.getElementById(div).style.display = 'block';}
</script>