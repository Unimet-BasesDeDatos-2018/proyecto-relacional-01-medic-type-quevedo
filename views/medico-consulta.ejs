<div class="banner">
  <div class="col m12 valign-wrapper">
    <h4 class="vertical-align white-text">Consulta del Dr(a).
      <%= medico.Nombre+' '+medico.Apellido%>
    </h4>
  </div>
</div>

<form method="POST" action="/Consulta/Crear/<%= medico.id %>/<%= paciente.id %>" class="container">
  <div class="row card-panel">
    <div class="col m12">
      <div class="row">
        <div class="col m12">
          <h6 class="center">Datos del Paciente</h6>
        </div>
      </div>
      <div class="row">
        <div class="col m6 center">
          <p>
            Nombre:
            <br>
            <%=paciente.Nombre +' '+ paciente.Apellido %>
          </p>
        </div>
        <div class="col m6 center">
          <p>
            Edad:
            <br>
            <% var c = new Date( paciente.FNacimiento - Date.now()); %>
              <% var d = c.getFullYear() - 1970; %>
                <%= d %>

          </p>
        </div>
      </div>
      <div class="row">
        <div class="col m6">
          <p>Tipo de Sangre:
            <br>
            <%= paciente.TSangre%>
          </p>
        </div>
        <div class="col m6">
          <p>
            Dirección:
            <br>
            <%= paciente.NAptoCasa +' '+paciente.Urbanizacion%>
              <br>
              <%= paciente.Calle +' '+paciente.Ciudad%>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="row card-panel">
    <div class="col m12">
      <div class="row">
        <div class="col m12">
          <h5 class="center">Condición actual del paciente</h5>
        </div>
      </div>
      <div class="row">
        <div class="col m12">
          <div class="row">
            <div class="col m6 input-field">
              <input placeholder="120" name="Peso" id="Peso" type="text" class="validate">
              <label for="Peso">Peso (Kg)</label>
            </div>
            <div class="col m6 input-field">
              <input placeholder="1.80" name="Talla" id="Talla" type="text" class="validate">
              <label for="Talla">Talla (m)</label>
            </div>
          </div>
          <div class="row">
            <div class="col m6 input-field">
              <input placeholder="120" name="Tension" id="Tension" type="text" class="validate">
              <label for="Tension">Tension Arterial</label>
            </div>
            <div class="col m6 input-field">
              <input placeholder="37.5" name="Temperatura" id="Temperatura" type="text" class="validate">
              <label for="Temperatura">Temperatura(°C)</label>
            </div>
          </div>
          <div class="row">
            <div class="col m6 input-field">
              <input placeholder="13" name="FRespiratoria" id="FRespiratoria" type="text" class="validate">
              <label for="FRespiratoria">Frecuencia Respiratoria(N por min)</label>
            </div>
            <div class="col m6 input-field">
              <input placeholder="120/80" name="FCardiaca" id="FCardiaca" type="text" class="validate">
              <label for="FCardiaca">Frecuencia Cardiaca</label>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row card-panel">
      <div class="row">
          <div class="col m6 input-field">
             
              <div class="input-field col s12">
                
                  <select multiple>
                    <option value="" disabled selected>Medicamentos</option>
                    
            
                  <% medicamentos.forEach(function (medicamento) { %>
                      <option value="<%= medicamento.id %>"> <%= medicamento.Nombre %> </option>
                    <%})%>

                  </select>
                </div>

          </div>
          <div class="col m6 input-field">
              <div class="input-field col s12">
                  
                    <select multiple>
                      <option value="" disabled selected>Patologias</option>
                 
                      <% patologias.forEach(function (patologia) { %>
                        <option value="<%= patologia.id %>"> <%= patologia.Nombre %> </option>
                        <%})%>

                      </select>
                    </div>
                
          </div>
      </div>
  </div>

  <div class="row card-panel">
    <div class="col m12">
      <div class="row">
        <div class="col m12">
          <h5 class="center">Cirujano</h5>
          <br>
          <input class="waves-effect waves-light btn blue darken-1"  type="button" value="Mostrar" onclick="mostrar('mostrarCirujano')">
        </div>
      </div>
      <div class="row" id="mostrarCirujano" style='display:none;'>
        <div class="col m12">
          <div class="row">
            <div class="col m6 input-field">
              <input placeholder="Paro Cardiaco" name="motivo" id="motivo" type="text" class="validate">
              <label for="motivo">Motivo de la operación</label>
            </div>
            <div class="col m6 input-field">
              <input placeholder="Corazon" name="organo" id="organo" type="text" class="validate">
              <label for="organo">Órgano</label>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row card-panel">
    <div class="col m12">
      <div class="row">
        <div class="col m12">
          <h5 class="center">Internista</h5>
          <br>
          <input class="waves-effect waves-light btn blue darken-1"  type="button" value="Mostrar" onclick="mostrar('mostrarInternista')">
        </div>
      </div>
      <div class="row" id="mostrarInternista" style='display:none;'>
        <div class="col m12">
          <div class="row">
            <div class="col m6 input-field">
              <input placeholder="Diabetico" name="condicion" id="condicion" type="text" class="validate">
              <label for="condicion">Condición del Paciente</label>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row card-panel">
    <div class="col m12">
      <div class="row">
        <div class="col m12">
          <h5 class="center">Nutricionista</h5>
          <br>
          <input class="waves-effect waves-light btn blue darken-1"  type="button" value="Mostrar" onclick="mostrar('mostrarNutricionista')">
        </div>
      </div>
      <div class="row" id="mostrarNutricionista" style='display:none;'>
        <div class="col m12">
          <div class="row">
            <div class="col m6 input-field">
              <input placeholder="Vegetales, Aceite de Oliva, Pescado a la plancha bajo en sal" name="dieta" id="dieta" type="text" class="validate">
              <label for="dieta">Dieta del Paciente</label>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>





  <div class="row card-panel">
    <div class="col m12">
      <button class="waves-effect waves-light btn blue darken-1" type="submit">Guardar</button>
    </div>
  </div>
  



<script type="text/javascript">
function mostrar(div){
document.getElementById(div).style.display = 'block';}
</script>