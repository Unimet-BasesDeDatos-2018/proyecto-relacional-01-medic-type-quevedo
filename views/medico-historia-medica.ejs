<div class="banner">
</div>
<div class="container">
  <div class="row">
    <div class="col m12">
      <h6 class="center">Historia Médica de  <%= paciente.Nombre+' '+paciente.Apellido%></h6>
    </div>
  </div>
  <div class="row card-panel">
      <div class="col m12">
        <h3 class="center">Lista de Consultas</h3>
      </div>
      
      <div class="col m12">
        <ul class="collapsible" data-collapsible="accordion">
          <% consultas.forEach(function (consulta) { %>
          <li>
            <div class="collapsible-header card-panel light-blue lighten-4"><i class="material-icons">filter_drama</i>
              <div class="col s1"><%= consulta.Fecha %></div>
              <div class="col s1"><%= consulta.Tipo %></div>
            </div>
            <div >
              <span>
                <div class="container">
                  <div class ="row">
                    <div class="col s6">
                      <p><b>Talla: </b><i><%= consulta.Talla %></i></p>
                      <p><b>Peso: </b><i><%= consulta.Peso %></i></p>
                      
                    </div>
                    <div class="col s6">
                      <p><b>Temperatura: </b><i><%= consulta.Temperatura %></i></p>
                      <p><b>Tension: </b><i><%= consulta.Tension %></i></p>
                      <p><b>Frecuencia Cardíaca: </b><i><%= consulta.FCardiaca %></i></p>
                      <p><b>Frecuencia Respiratoria: </b><i><%= consulta.FRespiratoria %></i></p>
                    </div>
                  </div>
                  <div class ="row">
                    <div class="col s6">
                      <p><b>Talla: </b><i><%= consulta.Talla %></i></p>
                      <p><b>Peso: </b><i><%= consulta.Peso %></i></p>
                      
                    </div>
                    <div class="col s6">
                      <p><b>Temperatura: </b><i><%= consulta.Temperatura %></i></p>
                      <p><b>Tension: </b><i><%= consulta.Tension %></i></p>
                      <p><b>Frecuencia Cardíaca: </b><i><%= consulta.FCardiaca %></i></p>
                      <p><b>Frecuencia Respiratoria: </b><i><%= consulta.FRespiratoria %></i></p>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col s6">
                      <table>
                        <thead>
                          <tr>
                            <th>
                              Patologías
                            </th>
                          </tr>
                        </thead>
                        <tbody>
                          <% patologias.forEach(function(patologia){ %>
                            <tr>
                              <td><% if(patologia.Informe == consulta.id){%><%= patologia.Nombre %><%}%></td>
                            </tr>
                          <% }) %>
                        </tbody>
                      </table>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col s6">
                      <table>
                        <thead>
                          <tr>
                            <th>
                              Medicamentos
                            </th>
                          </tr>
                        </thead>
                        <tbody>
                          <% medicamentos.forEach(function(medicamento){ %>
                            <tr>
                              <td><% if(medicamento.Consulta == consulta.id){%><%= medicamento.Nombre %><%}%></td>
                            </tr>
                          <% }) %>
                        </tbody>
                      </table>
                    </div>
                  </div>

                </div>
              </span>
            </div>
          </li>
          <%})%>
        </ul>
      </div>
    </div>

  <div class="row">
    <div class="col m12">
      
    </div>
  </div>
</div>
